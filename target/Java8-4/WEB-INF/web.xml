<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <servlet>
        <servlet-name>Servlet</servlet-name>
        <servlet-class>Servlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>Servlet_Edit</servlet-name>
        <servlet-class>Servlet_Edit</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>Servlet_Delete</servlet-name>
        <servlet-class>Servlet_Delete</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>Servlet_Create</servlet-name>
        <servlet-class>Servlet_Create</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>Servlet</servlet-name>
        <url-pattern>/servlet</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>Servlet_Edit</servlet-name>
        <url-pattern>/edit</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>Servlet_Delete</servlet-name>
        <url-pattern>/delete</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>Servlet_Create</servlet-name>
        <url-pattern>/create</url-pattern>
    </servlet-mapping>
</web-app>